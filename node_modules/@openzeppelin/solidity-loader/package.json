    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.1.1",
    "graceful-fs": "^4.2.3",
    "husky": "^3.0.5",
    "jest": "^24.8.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^9.4.0",
    "memory-fs": "^0.4.1",
    "prettier": "^1.18.2",
    "require-from-string": "^2.0.2",
    "webpack": "^4.29.5"
