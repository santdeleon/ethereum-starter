  "engines": {
    "node": ">=12.1.0",
    "npm": ">=6.9.0",
    "yarn": ">=1.22.1"
  },
  "dependencies": {
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "react-scripts": "3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@ethersproject/address": "5.0.0-beta.134",
    "@ethersproject/bignumber": "5.0.0-beta.138",
    "@ethersproject/constants": "5.0.0-beta.133",
    "@ethersproject/contracts": "5.0.0-beta.151",
    "@ethersproject/experimental": "5.0.0-beta.141",
    "@ethersproject/networks": "5.0.0-beta.136",
    "@ethersproject/providers": "5.0.0-beta.162",
    "@ethersproject/solidity": "5.0.2",
    "@ethersproject/strings": "5.0.0-beta.136",
    "@ethersproject/units": "5.0.0-beta.132",
    "@ethersproject/wallet": "5.0.0-beta.141",
    "@jackfranklin/test-data-bot": "^1.3.0",
    "@sheerun/mutationobserver-shim": "^0.3.3",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.3",
    "@testing-library/user-event": "12.6.0",
    "@web3-react/core": "^6.1.1",
    "@web3-react/fortmatic-connector": "^6.0.9",
    "@web3-react/injected-connector": "^6.0.7",
    "@web3-react/portis-connector": "^6.0.9",
    "@web3-react/walletconnect-connector": "^6.1.1",
    "@web3-react/walletlink-connector": "^6.0.9",
    "classnames": "^2.2.6",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest-dom": "^3.6.4",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-junit": "^12.0.0",
    "moment": "^2.29.1",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "prop-types": "^15.7.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest --watch",
    "test:ci": "test --ci --coverage --coverageDirectory=output/coverage/jest --reporters=default --reporters=jest-junit --testFailureExitCode=0 --silent"
  },
  "config": {
    "commitizen": {
      "path": "./client/node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '**/*.js'",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest-junit": {
    "outputDirectory": "./output/coverage/juint",
    "suiteNameTemplate": "{filepath}"
  }
}
